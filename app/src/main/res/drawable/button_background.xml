<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient
                android:endColor="@color/darkButton"
                android:gradientRadius="40dp"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/brightButton" />

            <corners android:radius="@dimen/button_corner_radius" />

            <stroke
                android:width="2dp"
                android:color="@color/brightButton" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient
                android:endColor="@color/darkButton"
                android:gradientRadius="40dp"
                android:type="radial"
                android:centerX="0.4"
                android:centerY="0.6"
                android:startColor="@color/brightButton" />

            <corners android:radius="@dimen/button_corner_radius" />

            <stroke
                android:width="2dp"
                android:color="@color/brightButton"
                />
        </shape>
    </item>
</selector>
