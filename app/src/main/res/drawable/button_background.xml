<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <gradient
                android:endColor="@color/darkButton"
                android:gradientRadius="20dp"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/brightButton" />

            <corners android:radius="@dimen/button_corner_radius" />

            <stroke
                android:width="2dp"
                android:color="@color/brightButton" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape android:shape="rectangle" >
                    <gradient
                        android:angle="45"
                        android:startColor="@color/metronomeMetal"
                        android:endColor="@color/brightButton"
                        android:type="linear" />
                    <size android:width="24dp"
                        android:height="24dp"/>
                    <corners android:radius="@dimen/button_corner_radius" />

                </shape>
            </item>

            <item
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
                <shape android:shape="rectangle" >
                    <gradient

                        android:endColor="@color/darkButton"
                        android:gradientRadius="20dp"
                        android:type="radial"
                        android:centerX="0.4"
                        android:centerY="0.6"
                        android:startColor="@color/brightButton" />
                    <corners android:radius="@dimen/button_corner_radius" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>
